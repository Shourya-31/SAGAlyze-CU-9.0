<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.sagalyze">

    <!-- ✅ Camera Permission -->
    <uses-permission android:name="android.permission.CAMERA" />

    <!-- ✅ Storage permission (for Android 12 and lower, needed for saving PDF) -->
    <uses-permission
        android:name="android.permission.WRITE_EXTERNAL_STORAGE"
        android:maxSdkVersion="32" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:name="com.sagalyze.App"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"

        android:icon="@mipmap/ic_launcher_foreground"
        android:roundIcon="@mipmap/ic_launcher_foreground_round"

        android:supportsRtl="true"
        android:theme="@style/Theme.SAGAlyze"
        android:usesCleartextTraffic="true"
        android:networkSecurityConfig="@xml/network_security_config"
        android:label="@string/app_name">

        <!-- ✅ FileProvider required for sharing PDF -->
        <provider
            android:name="androidx.core.content.FileProvider"
            android:authorities="${applicationId}.provider"
            android:exported="false"
            android:grantUriPermissions="true">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/file_paths" />
        </provider>

        <!-- ✅ Launcher Activity -->
        <activity
            android:name="com.sagalyze.ui.LoginActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/Theme.SAGAlyze">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- ✅ Main Dashboard -->
        <activity
            android:name="com.sagalyze.app.MainActivity"
            android:exported="true" />

        <!-- ✅ Patient Add Activity -->
        <activity
            android:name="com.example.sagalyze.ui.PatientAddActivity"
            android:exported="false"
            android:theme="@style/Theme.SAGAlyze" />

        <!-- ✅ Report Activity -->
        <activity
            android:name="com.example.sagalyze.report.ReportActivity"
            android:exported="false"
            android:theme="@style/Theme.SAGAlyze" />

        <!-- ✅ Diagnostics and Plan Activity -->
        <activity
            android:name="com.example.sagalyze.diagnostic.PlanActivity"
            android:label="Diagnostics and Plan"
            android:theme="@style/Theme.Material3.DayNight.NoActionBar" />

    </application>

</manifest>
