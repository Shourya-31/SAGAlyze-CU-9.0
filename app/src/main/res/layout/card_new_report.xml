<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/CardStyle"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/padding_card">

        <!-- Card Title -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/spacing_md"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="@dimen/icon_size_normal"
                android:layout_height="@dimen/icon_size_normal"
                android:contentDescription="@string/new_report_title"
                android:src="@drawable/ic_file_text"
                app:tint="@color/primary_green" />

            <TextView
                style="@style/TextTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/spacing_sm"
                android:text="@string/new_report_title" />
        </LinearLayout>

        <!-- Upload Skin Photo Section -->
        <TextView
            style="@style/TextLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/spacing_sm"
            android:text="@string/label_upload_photo" />

        <!-- Photo Upload Area -->
        <FrameLayout
            android:id="@+id/uploadArea"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/spacing_md"
            android:background="@drawable/bg_upload_area"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?attr/selectableItemBackground"
            android:minHeight="150dp"
            android:padding="@dimen/spacing_lg">


            <LinearLayout
                android:id="@+id/uploadPrompt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp"
                android:gravity="center">

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardBackgroundColor="@color/card_background_green"
                    app:cardCornerRadius="20dp"
                    app:cardElevation="2dp"
                    app:strokeColor="@color/border_green"
                    app:strokeWidth="2dp" />

                <!-- Upload Lesion Photo Label -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/upload_lesion_photo"
                    android:textColor="@color/dark_green"
                    android:textSize="14sp"
                    android:fontFamily="sans-serif-medium"
                    android:drawableStart="@drawable/ic_upload"
                    android:drawableTint="@color/light_green"
                    android:drawablePadding="8dp"
                    android:layout_marginBottom="8dp" />

                <!-- Upload Photo Container -->
                <!-- Upload Photo Container -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="32dp"
                    android:gravity="center">

                    <ImageView
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:src="@drawable/ic_upload"
                        app:tint="@color/light_green"
                        android:layout_marginBottom="12dp" />

                    <TextView
                        android:id="@+id/tvFileName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/tap_to_upload"
                        android:textColor="@color/dark_green"
                        android:textSize="14sp"
                        android:fontFamily="sans-serif-medium"
                        android:layout_marginBottom="8dp"
                        android:gravity="center" />

                    <TextView
                        android:id="@+id/tvFileSize"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/image_upload_info"
                        android:textColor="@color/text_secondary"
                        android:textSize="12sp"
                        android:layout_marginBottom="16dp"
                        android:gravity="center" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnClickToUpload"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Click to Upload"
                        android:textSize="14sp"
                        android:textColor="@color/dark_green"
                        app:icon="@drawable/ic_click"
                        app:iconGravity="textStart"
                        app:iconPadding="8dp"
                        app:strokeColor="@color/light_green"
                        app:strokeWidth="1dp"
                        app:cornerRadius="12dp"
                        style="@style/Widget.MaterialComponents.Button.OutlinedButton" />

                    <!-- ✅ Camera Preview (Initially Hidden) -->
                    <ImageView
                        android:id="@+id/ivPreview"
                        android:layout_width="140dp"
                        android:layout_height="140dp"
                        android:layout_marginTop="16dp"
                        android:scaleType="centerCrop"
                        android:visibility="gone"
                        android:background="@drawable/bg_preview_border"
                        android:contentDescription="Preview" />

                </LinearLayout>
            </LinearLayout>

            <!-- ✅ File Selected View (hidden initially, appears after selection) -->
            <!-- ✅ File Selected View (hidden initially, appears after selection) -->
            <LinearLayout
                android:id="@+id/fileSelectedView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:visibility="gone"
                android:padding="16dp"
                android:background="@color/card_background_green">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/ic_save"
                    app:tint="@color/white"
                    android:layout_marginEnd="12dp" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tvFileNameSelected"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="File selected"
                        android:textColor="@color/dark_green"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tvFileSizeSelected"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="1.2 MB"
                        android:textColor="@color/text_secondary"
                        android:textSize="12sp" />
                </LinearLayout>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnRemoveFile"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Remove"
                    android:textColor="@color/black"
                    app:strokeColor="@color/black"
                    app:strokeWidth="2dp"
                    app:cornerRadius="8dp"
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton" />
            </LinearLayout>

            <!-- ✅ AI Result Text -->
            <TextView
                android:id="@+id/tvAiResult"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:background="@color/dark_green"
                android:padding="12dp"
                android:layout_marginBottom="@dimen/spacing_md"
                android:textAlignment="center"
                android:textSize="14sp"
                android:visibility="gone" />


        </FrameLayout>


        <!-- Report Title Input -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/tilReportTitle"
            style="@style/InputStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/spacing_md"
            android:hint="@string/label_report_title">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etReportTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Clinical Findings Input -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/tilClinicalFindings"
            style="@style/InputStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/spacing_md"
            android:hint="@string/label_clinical_findings">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etClinicalFindings"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="top|start"
                android:inputType="textMultiLine"
                android:minHeight="100dp" />
        </com.google.android.material.textfield.TextInputLayout>


