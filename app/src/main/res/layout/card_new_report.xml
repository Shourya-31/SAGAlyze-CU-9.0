<!--                android:gravity="top|start"-->
<!--                android:inputType="textMultiLine"-->
<!--                android:minHeight="100dp" />-->
<!--        </com.google.android.material.textfield.TextInputLayout>-->

        <!-- Action Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_sm"
            android:orientation="horizontal">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnGenerateReport"
                style="@style/ButtonPrimary"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/spacing_xs"
                android:layout_weight="1"
                android:drawableLeft="@drawable/ic_file_text"
                android:drawablePadding="@dimen/spacing_sm"
                android:text="@string/button_generate_report" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_sm"
            android:orientation="horizontal">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnDownloadPdf"
                style="@style/ButtonOutline"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/spacing_xs"
                android:layout_weight="1"
                android:drawableLeft="@drawable/ic_download"
                android:drawablePadding="@dimen/spacing_sm"
                android:text="Save PDF" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnSendToPatient"
                style="@style/ButtonOutline"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/spacing_xs"
                android:layout_weight="1"
                android:drawableLeft="@drawable/ic_send"
                android:drawablePadding="@dimen/spacing_sm"
                android:text="@string/button_send_to_patient" />
        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>
