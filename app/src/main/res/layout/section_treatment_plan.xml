<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <!-- Section Header -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Treatment Plan"
            android:textColor="@color/jade_green_dark"
            android:textSize="18sp"
            android:textStyle="bold" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/addTreatmentButton"
            style="@style/Widget.Material3.Button.OutlinedButton"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:text="Add Item"
            android:textColor="@color/jade_green"
            app:cornerRadius="20dp"
            app:icon="@drawable/ic_add"
            app:iconTint="@color/jade_green"
            app:strokeColor="@color/jade_green" />
    </LinearLayout>

    <!-- Treatment Items List -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/treatmentRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:nestedScrollingEnabled="false" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="24dp" />
</LinearLayout>
